@model IEnumerable<SAIS.Models.DTOs.ApplicantListDto>

@{
    ViewData["Title"] = "Applicants";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Applicants</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> New Applicant
    </a>
</div>

<!-- Success/Error Messages -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-circle me-2"></i>
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- Search and Filter Form -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-4">
                <label for="searchString" class="form-label">Search</label>
                <input type="text" class="form-control" id="searchString" name="searchString"
                    value="@ViewData["CurrentFilter"]" placeholder="Name or ID Number">
            </div>
            <div class="col-md-4">
                <label for="countyFilter" class="form-label">County</label>
                <input type="text" class="form-control" id="countyFilter" name="countyFilter"
                    value="@ViewData["CountyFilter"]" placeholder="County name">
            </div>
            <div class="col-md-4 d-flex align-items-end">
                <button type="submit" class="btn btn-outline-primary me-2">
                    <i class="fas fa-search"></i> Search
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-times"></i> Clear
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Applicants Table -->
<div class="card">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>ID Number</th>
                            <th>Name</th>
                            <th>Gender</th>
                            <th>Marital Status</th>
                            <th>Village</th>
                            <th>Phone Numbers</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@Html.DisplayFor(modelItem => item.IdNumber)</strong>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FullName)
                                </td>
                                <td>@Html.DisplayFor(modelItem => item.GenderName)</td>
                                <td>@Html.DisplayFor(modelItem => item.MaritalStatusName)</td>
                                <td>
                                    @item.VillageName, @item.CountyName
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.PhoneNumbers))
                                    {
                                        @Html.DisplayFor(modelItem => item.PhoneNumbers)
                                    }
                                    else
                                    {
                                        <span class="text-muted">No phone numbers</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.ApplicantId"
                                            class="btn btn-sm btn-outline-info" title="View Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.ApplicantId"
                                            class="btn btn-sm btn-outline-warning" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.ApplicantId"
                                            class="btn btn-sm btn-outline-danger" title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-users fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">No applicants found</h5>
                <p class="text-muted">Start by adding a new applicant or adjust your search criteria.</p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Add First Applicant
                </a>
            </div>
        }
    </div>
</div>
