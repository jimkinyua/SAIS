@model IEnumerable<SAIS.Models.DTOs.ApplicationListDto>

@{
    ViewData["Title"] = "Applications";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Applications</h2>
    <div>
        <a asp-action="Create" class="btn btn-primary me-2">
            <i class="fas fa-plus"></i> New Application
        </a>
        <a asp-action="NewApplication" class="btn btn-success">
            <i class="fas fa-file-alt"></i> Quick Application
        </a>
    </div>
</div>

<!-- Success/Error Messages -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-circle me-2"></i>
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- Search and Filter Form -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-3">
                <label for="searchString" class="form-label">Search</label>
                <input type="text" class="form-control" id="searchString" name="searchString"
                    value="@ViewData["CurrentFilter"]" placeholder="Applicant name or ID">
            </div>
            <div class="col-md-2">
                <label for="officerFilter" class="form-label">Officer</label>
                <input type="text" class="form-control" id="officerFilter" name="officerFilter"
                    value="@ViewData["OfficerFilter"]" placeholder="Officer name">
            </div>
            <div class="col-md-2">
                <label for="programFilter" class="form-label">Program</label>
                <input type="text" class="form-control" id="programFilter" name="programFilter"
                    value="@ViewData["ProgramFilter"]" placeholder="Program name">
            </div>
            <div class="col-md-2">
                <label for="startDate" class="form-label">From Date</label>
                <input type="date" class="form-control" id="startDate" name="startDate" value="@ViewData["StartDate"]">
            </div>
            <div class="col-md-2">
                <label for="endDate" class="form-label">To Date</label>
                <input type="date" class="form-control" id="endDate" name="endDate" value="@ViewData["EndDate"]">
            </div>
            <div class="col-md-1 d-flex align-items-end">
                <button type="submit" class="btn btn-outline-primary me-2">
                    <i class="fas fa-search"></i>
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-times"></i>
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Applications Table -->
<div class="card">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Application Date</th>
                            <th>Applicant</th>
                            <th>ID Number</th>
                            <th>Officer</th>
                            <th>Programs</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@item.ApplicationDate.ToString("dd/MM/yyyy")</strong>
                                </td>
                                <td>
                                    @item.ApplicantName
                                </td>
                                <td>
                                    <code>@item.ApplicantIdNumber</code>
                                </td>
                                <td>@item.OfficerName</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.ProgramNames))
                                    {
                                        <div class="d-flex flex-wrap gap-1">
                                            @foreach (var programName in item.ProgramNames.Split(", "))
                                            {
                                                <span class="badge bg-primary">@programName</span>
                                            }
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted">No programs</span>
                                    }
                                </td>
                                <td>
                                    @if (item.OfficerSignedDate.HasValue)
                                    {
                                        <span class="badge bg-success">Completed</span>
                                    }
                                    else if (item.ApplicantSignedDate.HasValue)
                                    {
                                        <span class="badge bg-warning">Pending Officer</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Draft</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.ApplicationId"
                                            class="btn btn-sm btn-outline-info" title="View Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.ApplicationId"
                                            class="btn btn-sm btn-outline-warning" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.ApplicationId"
                                            class="btn btn-sm btn-outline-danger" title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-file-alt fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">No applications found</h5>
                <p class="text-muted">Start by creating a new application or adjust your search criteria.</p>
                <div class="d-flex gap-2 justify-content-center">
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus"></i> New Application
                    </a>
                    <a asp-action="NewApplication" class="btn btn-success">
                        <i class="fas fa-file-alt"></i> Quick Application
                    </a>
                </div>
            </div>
        }
    </div>
</div>
