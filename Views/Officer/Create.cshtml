@model SAIS.Models.Officer

@{
    ViewData["Title"] = "Create Officer";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Create New Officer</h2>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left"></i> Back to List
    </a>
</div>

<div class="row">
    <div class="col-lg-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Officer Information</h5>
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    
                    <div class="form-group mb-3">
                        <label asp-for="OfficerName" class="form-label">
                            Officer Name <span class="text-danger">*</span>
                        </label>
                        <input asp-for="OfficerName" class="form-control" autofocus />
                        <span asp-validation-for="OfficerName" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Designation" class="form-label">
                            Designation <span class="text-danger">*</span>
                        </label>
                        <input asp-for="Designation" class="form-control" />
                        <span asp-validation-for="Designation" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-4">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Create Officer
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-times"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
