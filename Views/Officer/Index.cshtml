@model IEnumerable<SAIS.Models.Officer>

@{
    ViewData["Title"] = "Officers";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Officers</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> New Officer
    </a>
</div>

<div class="card">
    <div class="card-body">
        @if (Model.Any())
        {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Officer Name</th>
                                <th>Designation</th>
                                <th>Applications</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                    <tr>
                                        <td>
                                            <strong>@Html.DisplayFor(modelItem => item.OfficerName)</strong>
                                        </td>
                                        <td>@Html.DisplayFor(modelItem => item.Designation)</td>
                                        <td>
                                            <span class="badge bg-info">@item.Applications.Count</span>
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a asp-action="Details" asp-route-id="@item.OfficerId" 
                                                   class="btn btn-sm btn-outline-info" title="View Details">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a asp-action="Edit" asp-route-id="@item.OfficerId" 
                                                   class="btn btn-sm btn-outline-warning" title="Edit">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@item.OfficerId" 
                                                   class="btn btn-sm btn-outline-danger" title="Delete">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                            }
                        </tbody>
                    </table>
                </div>
        }
        else
        {
                <div class="text-center py-5">
                    <i class="fas fa-user-tie fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">No officers found</h5>
                    <p class="text-muted">Start by adding a new officer.</p>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Add First Officer
                    </a>
                </div>
        }
    </div>
</div>
