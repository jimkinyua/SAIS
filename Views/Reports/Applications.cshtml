@model IEnumerable<SAIS.Models.Application>

@{
    ViewData["Title"] = "Applications Report";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Applications Report</h2>
    <div>
        <a asp-action="Export" asp-route-format="excel" asp-route-officerFilter="@ViewData["OfficerFilter"]" 
           asp-route-programFilter="@ViewData["ProgramFilter"]" asp-route-startDate="@ViewData["StartDate"]" 
           asp-route-endDate="@ViewData["EndDate"]" class="btn btn-success me-2">
            <i class="fas fa-file-excel"></i> Export Excel
        </a>
        <a asp-action="Export" asp-route-format="pdf" asp-route-officerFilter="@ViewData["OfficerFilter"]" 
           asp-route-programFilter="@ViewData["ProgramFilter"]" asp-route-startDate="@ViewData["StartDate"]" 
           asp-route-endDate="@ViewData["EndDate"]" class="btn btn-danger">
            <i class="fas fa-file-pdf"></i> Export PDF
        </a>
    </div>
</div>

<!-- Filter Form -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-3">
                <label for="officerFilter" class="form-label">Officer</label>
                <input type="text" class="form-control" id="officerFilter" name="officerFilter" 
                       value="@ViewData["OfficerFilter"]" placeholder="Officer name">
            </div>
            <div class="col-md-3">
                <label for="programFilter" class="form-label">Program</label>
                <input type="text" class="form-control" id="programFilter" name="programFilter" 
                       value="@ViewData["ProgramFilter"]" placeholder="Program name">
            </div>
            <div class="col-md-2">
                <label for="startDate" class="form-label">From Date</label>
                <input type="date" class="form-control" id="startDate" name="startDate" 
                       value="@ViewData["StartDate"]">
            </div>
            <div class="col-md-2">
                <label for="endDate" class="form-label">To Date</label>
                <input type="date" class="form-control" id="endDate" name="endDate" 
                       value="@ViewData["EndDate"]">
            </div>
            <div class="col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-outline-primary me-2">
                    <i class="fas fa-search"></i> Filter
                </button>
                <a asp-action="Applications" class="btn btn-outline-secondary">
                    <i class="fas fa-times"></i> Clear
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Applications Table -->
<div class="card">
    <div class="card-header">
        <h5 class="card-title mb-0">Applications Report</h5>
        <p class="card-text text-muted mb-0">Total: @Model.Count() applications</p>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Application Date</th>
                                <th>Applicant Name</th>
                                <th>ID Number</th>
                                <th>Gender</th>
                                <th>Marital Status</th>
                                <th>County</th>
                                <th>Officer</th>
                                <th>Programs</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                    <tr>
                                        <td><strong>@item.ApplicationDate.ToString("dd/MM/yyyy")</strong></td>
                                        <td>@item.Applicant.FirstName @item.Applicant.LastName</td>
                                        <td><code>@item.Applicant.IdNumber</code></td>
                                        <td>@item.Applicant.GenderCategory.GenderCategoryName</td>
                                        <td>@item.Applicant.MaritalStatus.StatusName</td>
                                        <td>@item.Applicant.Village.SubLocation.Location.SubCounty.County.CountyName</td>
                                        <td>@item.Officer.OfficerName</td>
                                        <td>
                                            @if (item.AppliedPrograms.Any())
                                            {
                                                    <div class="d-flex flex-wrap gap-1">
                                                        @foreach (var program in item.AppliedPrograms)
                                                        {
                                                                <span class="badge bg-primary">@program.SocialAssistanceProgram.ProgramName</span>
                                                        }
                                                    </div>
                                            }
                                            else
                                            {
                                                    <span class="text-muted">No programs</span>
                                            }
                                        </td>
                                        <td>
                                            @if (item.OfficerSignedDate != default(DateTime))
                                            {
                                                    <span class="badge bg-success">Completed</span>
                                            }
                                            else
                                            {
                                                    <span class="badge bg-warning">Pending</span>
                                            }
                                        </td>
                                    </tr>
                            }
                        </tbody>
                    </table>
                </div>
        }
        else
        {
                <div class="text-center py-5">
                    <i class="fas fa-file-alt fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">No applications found</h5>
                    <p class="text-muted">Try adjusting your filter criteria.</p>
                </div>
        }
    </div>
</div>
