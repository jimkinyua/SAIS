@model SAIS.Models.DTOs.GenderCategoryCreateDto

@{
    ViewData["Title"] = "Create Gender Category";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-plus text-info"></i> Create New Gender Category</h2>
                <a href="@Url.Action("Genders")" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to Gender Categories
                </a>
            </div>

            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0"><i class="fas fa-venus-mars"></i> Gender Category Information</h5>
                        </div>
                        <div class="card-body">
                            <form asp-action="CreateGender" method="post">
                                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                                <div class="mb-3">
                                    <label asp-for="GenderName" class="form-label">
                                        Gender Name <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="GenderName" class="form-control" placeholder="Enter gender name (e.g., Male, Female, Other)" />
                                    <span asp-validation-for="GenderName" class="text-danger"></span>
                                </div>

                                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                    <a href="@Url.Action("Genders")" class="btn btn-secondary me-md-2">
                                        <i class="fas fa-times"></i> Cancel
                                    </a>
                                    <button type="submit" class="btn btn-info">
                                        <i class="fas fa-save"></i> Create Gender Category
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
