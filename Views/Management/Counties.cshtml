@model IEnumerable<SAIS.Models.DTOs.CountyDto>

@{
    ViewData["Title"] = "Manage Counties";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-map-marker-alt text-primary"></i> Manage Counties</h2>
                <a href="@Url.Action("CreateCounty")" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Add New County
                </a>
            </div>

            <!-- Success/Error Messages -->
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- Counties Table -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-list"></i> Counties List</h5>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>County Name</th>
                                        <th>Sub-Counties</th>
                                        <th width="150">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var county in Model)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@county.CountyName</strong>
                                            </td>
                                            <td>
                                                <span class="badge bg-info">@county.SubCountiesCount Sub-Counties</span>
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a href="@Url.Action("ManageCounty", new { id = county.CountyId })"
                                                        class="btn btn-sm btn-success" title="Manage County">
                                                        <i class="fas fa-cogs"></i> Manage
                                                    </a>
                                                    <a href="@Url.Action("EditCounty", new { id = county.CountyId })"
                                                        class="btn btn-sm btn-outline-primary" title="Edit">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a href="@Url.Action("DeleteCounty", new { id = county.CountyId })"
                                                        class="btn btn-sm btn-outline-danger" title="Delete">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-map-marker-alt fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No Counties Found</h5>
                            <p class="text-muted">Start by adding your first county.</p>
                            <a href="@Url.Action("CreateCounty")" class="btn btn-primary">
                                <i class="fas fa-plus"></i> Add First County
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
