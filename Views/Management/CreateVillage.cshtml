@model SAIS.Models.DTOs.VillageCreateDto

@{
    ViewData["Title"] = "Create Village";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-plus text-success"></i> Create New Village</h2>
                <a href="@Url.Action("Villages")" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to Villages
                </a>
            </div>

            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0"><i class="fas fa-home"></i> Village Information</h5>
                        </div>
                        <div class="card-body">
                            <form asp-action="CreateVillage" method="post">
                                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                                <div class="mb-3">
                                    <label asp-for="VillageName" class="form-label">
                                        Village Name <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="VillageName" class="form-control" placeholder="Enter village name" />
                                    <span asp-validation-for="VillageName" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="SubCountyId" class="form-label">
                                        Sub-County <span class="text-danger">*</span>
                                    </label>
                                    <select asp-for="SubCountyId" class="form-select" asp-items="ViewBag.SubCountyId">
                                        <option value="">-- Select Sub-County --</option>
                                    </select>
                                    <span asp-validation-for="SubCountyId" class="text-danger"></span>
                                </div>

                                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                    <a href="@Url.Action("Villages")" class="btn btn-secondary me-md-2">
                                        <i class="fas fa-times"></i> Cancel
                                    </a>
                                    <button type="submit" class="btn btn-success">
                                        <i class="fas fa-save"></i> Create Village
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
