@model SAIS.Models.DTOs.CountyDto

@{
    ViewData["Title"] = "Delete County";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-trash text-danger"></i> Delete County</h2>
                <a href="@Url.Action("Counties")" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to Counties
                </a>
            </div>

            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6">
                    <div class="card border-danger">
                        <div class="card-header bg-danger text-white">
                            <h5 class="mb-0"><i class="fas fa-exclamation-triangle"></i> Confirm Deletion</h5>
                        </div>
                        <div class="card-body">
                            <div class="alert alert-warning" role="alert">
                                <i class="fas fa-exclamation-triangle"></i>
                                <strong>Warning!</strong> This action cannot be undone. Deleting this county will also remove all associated sub-counties and villages.
                            </div>

                            <h6>County Details:</h6>
                            <table class="table table-borderless">
                                <tr>
                                    <td><strong>County Name:</strong></td>
                                    <td>@Model.CountyName</td>
                                </tr>
                                <tr>
                                    <td><strong>Sub-Counties:</strong></td>
                                    <td>
                                        <span class="badge bg-info">@Model.SubCountiesCount Sub-Counties</span>
                                    </td>
                                </tr>
                            </table>

                            @if (Model.SubCountiesCount > 0)
                            {
                                    <div class="alert alert-info" role="alert">
                                        <i class="fas fa-info-circle"></i>
                                        This county has @Model.SubCountiesCount sub-counties. Deleting this county will also remove all associated sub-counties and villages.
                                    </div>
                            }

                            <form asp-action="DeleteCountyConfirmed" method="post" class="d-inline">
                                <input asp-for="CountyId" type="hidden" />
                                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                    <a href="@Url.Action("Counties")" class="btn btn-secondary me-md-2">
                                        <i class="fas fa-times"></i> Cancel
                                    </a>
                                    <button type="submit" class="btn btn-danger">
                                        <i class="fas fa-trash"></i> Delete County
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
