@{
    ViewData["Title"] = "Home";
}



<div class="row mb-5">
    <div class="col-md-4">
        <div class="card h-100 border-0 shadow-sm">
            <div class="card-body text-center">
                <div class="bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                    style="width: 80px; height: 80px;">
                    <i class="fas fa-users fa-2x"></i>
                </div>
                <h5 class="card-title">Manage Applicants</h5>
                <p class="card-text">Register and manage applicant information with comprehensive profiles including
                    personal details, contact information, and geographic data.</p>
                <a asp-controller="Applicant" asp-action="Index" class="btn btn-outline-primary">
                    <i class="fas fa-arrow-right me-1"></i>View Applicants
                </a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card h-100 border-0 shadow-sm">
            <div class="card-body text-center">
                <div class="bg-success text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                    style="width: 80px; height: 80px;">
                    <i class="fas fa-file-alt fa-2x"></i>
                </div>
                <h5 class="card-title">Process Applications</h5>
                <p class="card-text">Handle social assistance applications efficiently with our streamlined workflow,
                    from submission to approval and tracking.</p>
                <a asp-controller="Application" asp-action="Index" class="btn btn-outline-success">
                    <i class="fas fa-arrow-right me-1"></i>View Applications
                </a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card h-100 border-0 shadow-sm">
            <div class="card-body text-center">
                <div class="bg-info text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                    style="width: 80px; height: 80px;">
                    <i class="fas fa-chart-bar fa-2x"></i>
                </div>
                <h5 class="card-title">Generate Reports</h5>
                <p class="card-text">Create comprehensive reports and analytics to track program performance, applicant
                    demographics, and application trends.</p>
                <a asp-controller="Reports" asp-action="Index" class="btn btn-outline-info">
                    <i class="fas fa-arrow-right me-1"></i>View Reports
                </a>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-light">
                <h5 class="card-title mb-0">
                    <i class="fas fa-tachometer-alt me-2"></i>Quick Actions
                </h5>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-6">
                        <a asp-controller="Application" asp-action="NewApplication"
                            class="btn btn-outline-primary w-100 py-3">
                            <i class="fas fa-bolt fa-2x d-block mb-2"></i>
                            <strong>Quick Application</strong><br>
                            <small>Start a new application by ID lookup</small>
                        </a>
                    </div>
                    <div class="col-md-6">
                        <a asp-controller="Applicant" asp-action="RegisterAndApply" class="btn btn-outline-success w-100 py-3">
                            <i class="fas fa-user-plus fa-2x d-block mb-2"></i>
                            <strong>Add New Applicant</strong><br>
                            <small>Register a new applicant</small>
                        </a>
                    </div>
                    <div class="col-md-6">
                        <a asp-controller="Application" asp-action="Index" class="btn btn-outline-warning w-100 py-3">
                            <i class="fas fa-list fa-2x d-block mb-2"></i>
                            <strong>View Applications</strong><br>
                            <small>Browse all applications</small>
                        </a>
                    </div>
                    <div class="col-md-6">
                        <a asp-controller="Reports" asp-action="Index" class="btn btn-outline-info w-100 py-3">
                            <i class="fas fa-chart-line fa-2x d-block mb-2"></i>
                            <strong>View Dashboard</strong><br>
                            <small>See system overview</small>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-light">
                <h5 class="card-title mb-0">
                    <i class="fas fa-info-circle me-2"></i>System Information
                </h5>
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <span>System Status:</span>
                    <span class="badge bg-success">Online</span>
                </div>
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <span>Version:</span>
                    <span class="text-muted">1.0.0</span>
                </div>
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <span>Last Updated:</span>
                    <span class="text-muted">@DateTime.Now.ToString("MMM dd, yyyy")</span>
                </div>
                <hr>
                <p class="text-muted small mb-0">
                    <i class="fas fa-shield-alt me-1"></i>
                    Your data is secure and protected with industry-standard encryption.
                </p>
            </div>
        </div>
    </div>
</div>
