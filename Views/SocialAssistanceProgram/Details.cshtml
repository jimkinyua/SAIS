@model SAIS.Models.SocialAssistanceProgram

@{
    ViewData["Title"] = "Program Details";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Program Details</h2>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.ProgramId" class="btn btn-warning">
            <i class="fas fa-edit"></i> Edit
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Program Information</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">Program Name:</dt>
                    <dd class="col-sm-9"><strong>@Html.DisplayFor(model => model.ProgramName)</strong></dd>
                    
                    <dt class="col-sm-3">Total Applications:</dt>
                    <dd class="col-sm-9">
                        <span class="badge bg-primary fs-6">@Model.AppliedPrograms.Count</span>
                    </dd>
                </dl>
            </div>
        </div>

        @if (Model.AppliedPrograms.Any())
        {
                <div class="card mt-4">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Applications for this Program</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Application Date</th>
                                        <th>Applicant</th>
                                        <th>ID Number</th>
                                        <th>Officer</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var appliedProgram in Model.AppliedPrograms.OrderByDescending(ap => ap.Application.ApplicationDate))
                                    {
                                            var application = appliedProgram.Application;
                                            <tr>
                                                <td>@application.ApplicationDate.ToString("dd/MM/yyyy")</td>
                                                <td>@application.Applicant.FirstName @application.Applicant.LastName</td>
                                                <td><code>@application.Applicant.IdNumber</code></td>
                                                <td>@application.Officer.OfficerName</td>
                                                <td>
                                                    @if (application.OfficerSignedDate != default(DateTime))
                                                    {
                                                            <span class="badge bg-success">Completed</span>
                                                    }
                                                    else
                                                    {
                                                            <span class="badge bg-warning">Pending</span>
                                                    }
                                                </td>
                                            </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
        }
    </div>
</div>
